<%= content_for(:title, t("views.app_name") + " | " + t("devise.sessions.sign_in")) %>

<h2><%= t("devise.sessions.sign_in") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, autofocus: true, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("devise.sessions.remember") %>
    </div>
  <% end -%>

  <div class="panel panel-success">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-3">
          <%= f.submit "Acessar Ponto",class: "btn btn-success" %>
        </div>
        <div class="col-md-4"></div>
      </div>
    </div>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
<%= content_for(:title, t("views.app_name") + " | " + t("views.users.editing_profile")) %>

<div class="row">
  <div class="col-md-12">
    <h1><%= t("views.layouts.menu.edit_profile") %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <% if !@user.new_record? %>
        <%= hidden_field_tag :id, @user.id %>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :username %><br>
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(<%= t("devise.registrations.edit.leave_password") %>)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <br>
      <br>

      <div class="field">
        <%= f.label :current_password %> <i>(<%= t("devise.registrations.edit.need") %>)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <br>

      <div><%= f.submit class: "btn btn-warning" %></div>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="well">
    <h3><%= t("devise.cancel.account") %></h3>

    <p><%= t("devise.cancel.unhappy") %> <%= button_to t("devise.cancel.account"), registration_path(resource_name), data: { confirm: t("views.are_you_sure") }, method: :delete, class: "btn btn-warning" %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to t("views.back"), :back, class: "btn btn-default" %>
  </div>
</div>
<br>